<script>
function fetchPreviousIncidentDetails() {
    var identifier = document.getElementById('details').value;
    if(identifier.length > 3) {  // Consider fetching details after a reasonable number of characters
        $.ajax({
            url: '/api/fetchDetails',  // Adjust this URL to your actual endpoint
            type: 'GET',
            data: { identify: identifier },
            success: function(data) {
                if (data) {
                    $('#details').val(data.details);
                    $('#identity').val(data.identity);
                    $('#priority').val(data.priority);
                }
            },
            error: function(error) {
                console.error('Error fetching previous details:', error);
            }
        });
    }
}
</script>

