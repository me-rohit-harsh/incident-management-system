spring.application.name=incident


# DataSource configuration
spring.datasource.url=jdbc:mysql://localhost:3306/incident

spring.datasource.username=root
spring.datasource.password=rohit
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Hibernate configuration
spring.jpa.hibernate.ddl-auto=create

 #Show SQL statements in the console (optional)
spring.jpa.show-sql=false

# Hibernate SQL Logging Level
logging.level.org.hibernate.sql=DEBUG

#Remove unnesecary logs
logging.level.com.indianbank=warn
spring.jpa.open-in-view=false
logging.level.root=WARN